<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ff00"
    android:weightSum="12"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_weight="0.5"
        android:text="@string/title" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_weight="0.5"
        android:layout_gravity="right"
        android:text="@string/name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48sp"
            android:layout_marginVertical="8sp"
            android:orientation="horizontal"
            android:weightSum="3">

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48sp"
            android:orientation="horizontal"
            android:weightSum="3">

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48sp"
            android:layout_marginVertical="8sp"
            android:orientation="horizontal"
            android:weightSum="3">

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />

            <jp.ac.hal.CustomImageView
                android:id="@+id/customImageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/blank" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/resultLabel" />

        <TextView
            android:id="@+id/resultArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/resultArea" />
    </LinearLayout>

    <Button
        android:layout_weight="0.5"
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

</LinearLayout>